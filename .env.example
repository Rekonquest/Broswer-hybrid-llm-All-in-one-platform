# Environment Variables for Hybrid LLM Platform
# Copy this file to .env and fill in your actual values

# Database
DATABASE_URL=postgresql://hybrid_llm_user:change_me_in_production@localhost:5432/hybrid_llm
POSTGRES_DB=hybrid_llm
POSTGRES_USER=hybrid_llm_user
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Cloud LLM API Keys
# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your-key-here

# OpenAI ChatGPT
OPENAI_API_KEY=sk-your-key-here

# Google Gemini
GOOGLE_API_KEY=your-key-here

# Mistral (if using)
MISTRAL_API_KEY=your-key-here

# Logging
RUST_LOG=hybrid_llm=debug,info
LOG_LEVEL=info

# Application
CONFIG_PATH=./config.toml
